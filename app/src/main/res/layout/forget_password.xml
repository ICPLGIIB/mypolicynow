<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:id="@+id/root_layout"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar">
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tool_bar">
            <include
                android:id="@+id/background"
                layout="@layout/layout_background"/>
            <RelativeLayout
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_centerHorizontal="true">
                <TextView
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forgot Password?"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/san_francisco_display_semibold"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading"
                android:layout_centerHorizontal="true">
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="We just need your registered e-mail address"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/san_francisco_display_light"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="to send you a password reset link!"
                    android:layout_below="@+id/text1"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/san_francisco_display_light"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/forget"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/text"
                android:layout_centerHorizontal="true">
                <RelativeLayout
                    android:id="@+id/login_id"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:descendantFocusability="beforeDescendants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:textSize="14dp"
                        android:textColor="@color/colorAccent"
                        android:textColorHighlight="@color/hightlight_color_new"
                        android:textColorHint="@drawable/textview_hint_drawable"
                        android:id="@+id/email"
                        android:background="@drawable/new_edittext_focus"
                        android:paddingLeft="10dp"
                        android:paddingBottom="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:hint="Enter your registered email address"
                        android:drawableLeft="@drawable/edittext_mail"
                        android:drawablePadding="20dp"
                        android:inputType="textPersonName"
                        android:imeOptions="actionDone"
                        android:fontFamily="@font/san_francisco_display_light"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/error_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/forget">
                <TextView
                    android:textSize="12dp"
                    android:textColor="#ff4848"
                    android:id="@+id/hint_email_error"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Weâ€™re sorry! The email ID is not registered with us!" android:fontFamily="@font/san_francisco_display_light"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/reset_btn_disabled"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/error_text"
                android:layout_centerHorizontal="true">

                    <Button
                        android:enabled="false"
                        android:textStyle="bold"
                        android:textColor="#80ffffff"
                        android:background="@drawable/button_selector_forget_password" android:layout_width="match_parent" android:layout_height="55dp" android:text="Reset Password" android:layout_centerHorizontal="true" android:fontFamily="@font/san_francisco_display_semibold" android:elevation="2dp" android:letterSpacing="0.2"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/reset_btn_enabled"
                android:visibility="visible"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/error_text"
                android:layout_centerHorizontal="true">
                    <Button
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:id="@+id/reset_password"
                        android:background="@color/primary_green"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:text="Reset Password"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/san_francisco_display_semibold"
                        android:elevation="2dp" android:letterSpacing="0.2"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/reset_btn_disabled"
                android:layout_alignParentBottom="true">
                <TextView
                    android:textSize="15dp"
                    android:textColor="@color/grey_bg_color"
                    android:gravity="center"
                    android:id="@+id/forget_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="Don&apos;t have an account?"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/san_francisco_display_light"/>
                <Button
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:gravity="center" android:id="@+id/signUp"
                    android:background="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign up"
                    android:layout_below="@+id/forget_text1"
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="true"
                    android:fontFamily="@font/san_francisco_display_bold"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
