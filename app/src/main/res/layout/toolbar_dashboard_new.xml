<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:background="#101010"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/back_btn"
            android:background="@drawable/sidebar_menu_new"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginTop="13dp"/>
        <TextView
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/screen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Dashboard"
            android:layout_toRightOf="@+id/back_btn"
            android:fontFamily="@font/san_francisco_display_semibold"/>
        <Button
            android:textSize="13dp"
            android:textColor="#ffffff"
            android:id="@+id/btn_skip"
            android:background="@color/color_bg_new"
            android:paddingBottom="8dp"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:text="Skip This Step"
            android:layout_alignParentRight="true"
            android:textAllCaps="false"
            android:fontFamily="@font/san_francisco_display_medium"/>
        <Button
            android:textSize="10dp"
            android:textColor="#d2d2d2"
            android:id="@+id/btn_rename"
            android:background="@color/color_bg_new"
            android:padding="6dp"
            android:visibility="invisible"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="60dp"
            android:text="Edit"
            android:drawableTop="@drawable/drawable_rename_new"
            android:layout_alignParentRight="true"
            android:textAllCaps="false"
            android:fontFamily="@font/san_francisco_display_medium"/>
        <Button
            android:textSize="10dp"
            android:textColor="#d2d2d2"
            android:id="@+id/btn_reset_demo"
            android:background="@color/color_bg_new"
            android:padding="6dp"
            android:visibility="invisible"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginTop="7dp"
            android:text="Reset"
            android:drawableTop="@drawable/reset_button_demo"
            android:layout_toLeftOf="@+id/btn_rename"
            android:textAllCaps="false"
            android:fontFamily="@font/san_francisco_display_medium"/>
        <Button
            android:textSize="10dp"
            android:textColor="#d2d2d2"
            android:id="@+id/btn_restore"
            android:background="@color/color_bg_new"
            android:padding="6dp"
            android:visibility="invisible"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="60dp"
            android:text="Restore"
            android:drawableTop="@drawable/drawable_restore_new"
            android:layout_alignParentRight="true"
            android:textAllCaps="false"
            android:fontFamily="@font/san_francisco_display_medium"/>
        <Button
            android:textSize="10dp"
            android:textColor="#d2d2d2"
            android:id="@+id/btn_delete"
            android:background="@color/color_bg_new"
            android:padding="6dp"
            android:visibility="invisible"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:text="Delete"
            android:drawableTop="@drawable/drawable_delete_new"
            android:drawablePadding="2dp"
            android:layout_alignParentRight="true"
            android:textAllCaps="false"
            android:fontFamily="@font/san_francisco_display_medium"/>
        <Button
            android:textSize="14dp"
            android:textColor="#d2d2d2"
            android:id="@+id/btn_next"
            android:background="@android:color/transparent"
            android:padding="6dp"
            android:visibility="invisible"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:text="Next"
            android:layout_alignParentRight="true"
            android:textAllCaps="false"
            android:fontFamily="@font/san_francisco_display_medium"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/layout_main">
        <View
            android:background="@drawable/toolbar_shadow"
            android:layout_width="match_parent"
            android:layout_height="4dp"/>
    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>
