<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"

    android:background="@drawable/new_dashboard_background"
    app:ignore="NamespaceTypo">
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:weightSum="10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:editable="false"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginStart="5dp"
            android:layout_weight="8"
            android:id="@+id/title"
            android:text="ENTER PASSWORD"/>
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_weight="2"
            android:background="@color/colorPrimary"
            android:layout_gravity="center"
            android:visibility="visible"
            android:focusableInTouchMode="false"
            app:srcCompat="@drawable/cross_white"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_user_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_margin="10sp"
            android:textStyle="bold"
            android:padding="5sp"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text=""

            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="10sp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableStart="@drawable/ic_action_key"
                android:drawablePadding="10sp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="Password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:padding="10dp"
                android:layout_margin="10sp"
                android:singleLine="true"
                android:textColor="@color/abc_secondary_text_material_light"
                android:textColorHint="@color/black"
                android:textSize="15sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="5dp"
            android:layout_margin="10sp">
            <TextView
                android:id="@+id/verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10sp"
                android:background="@color/new_dashboard_green_color_light"
                android:layout_weight="6"
                android:clickable="true"
                android:cursorVisible="false"
                android:editable="false"
                android:padding="10sp"
                android:gravity="center"
                android:text="Verify"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/forget_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:layout_weight="4"
                android:gravity="center"
                android:clickable="true"
                android:cursorVisible="false"
                android:editable="false"
                android:visibility="gone"
                android:padding="10sp"
                android:text="Forgot Password"
                android:textAlignment="center"
                android:background="@color/white"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>