<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/form_background_color"
    android:fitsSystemWindows="true"
    android:id="@+id/Scroll_Bottom">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_Email_Addresss"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10sp"
            android:background="@drawable/btn_color_form_background"
            android:hint="Email *"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/edt_Mobile_Number"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"

            android:background="@drawable/btn_color_form_background"
            android:hint="Mobile *"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="17sp"
            android:maxLength="10" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"

            android:weightSum="10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="5"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/btn_color_form_background">

                <Spinner
                    android:id="@+id/Spn_Salutation"
                    style="@style/Widget.AppCompat.DropDownItem.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:padding="5dp"
                    android:entries="@array/spin_item_salutation"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <EditText
                android:id="@+id/edt_First_Name"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/btn_color_form_background"
                android:hint="First Name*"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:layout_weight="5"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="17sp" />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"

            android:weightSum="10">

            <EditText
                android:id="@+id/edt_Middle_Name"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/btn_color_form_background"
                android:hint="Middle Name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:layout_weight="5"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/edt_Last_Name"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/btn_color_form_background"
                android:hint="Last Name*"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:layout_weight="5"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="17sp" />




        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"

            android:weightSum="10">

            <EditText
                android:id="@+id/edt_Dob"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/btn_color_form_background"
                android:hint="Date Of Birth *"
                android:inputType="date"
                android:focusable="false"
                android:layout_weight="5"
                android:editable="false"
                android:imeOptions="actionNext"
                android:padding="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="17sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="5"
                android:background="@drawable/btn_color_form_background">

                <Spinner
                    android:id="@+id/Spn_Gender"
                    style="@style/Widget.AppCompat.DropDownItem.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:padding="5dp"
                    android:entries="@array/spin_item_gender"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
        android:weightSum="10">

        <EditText
            android:id="@+id/edt_Pan_Card"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="5dp"
            android:background="@drawable/btn_color_form_background"
            android:hint="PAN"
            android:layout_weight="5"
            android:imeOptions="actionNext"
            android:padding="5dp"
            android:maxLength="10"
            android:inputType="textCapCharacters"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/edt_Aadhar_Card"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="5dp"
            android:background="@drawable/btn_color_form_background"
            android:hint="Aadhar Card"
            android:imeOptions="actionNext"
            android:padding="5dp"
            android:layout_weight="5"

            android:maxLength="12"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="17sp" />
      </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:weightSum="10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:layout_weight="5"
                android:background="@drawable/btn_color_form_background">

                <Spinner
                    style="@style/Widget.AppCompat.DropDownItem.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:id="@+id/Spn_MaritalStatus"
                    android:entries="@array/spin_item_marital_status"
                    android:padding="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <EditText
                android:id="@+id/Edt_GstInNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:layout_weight="5"
                android:background="@drawable/btn_color_form_background"
                android:hint="GSTIN Number"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="15"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="17sp" />
        </LinearLayout>





    </LinearLayout>
</ScrollView>