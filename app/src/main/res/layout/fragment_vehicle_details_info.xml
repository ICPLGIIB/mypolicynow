<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/form_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:weightSum="10">





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:padding="5dp"
                    android:text="Eg- MH *"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/Edt_RtoStateCode"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_color_form_background"
                    android:hint="Eg- MH *"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:layout_weight="5"
                    android:maxLength="2"
                    android:padding="5dp"

                    android:editable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="17sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:padding="5dp"
                    android:text="Eg - 01 *"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/Edt_RtoCityCode"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_color_form_background"
                    android:hint="Eg - 01 *"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:layout_weight="5"
                    android:maxLength="2"
                    android:padding="5dp"

                    android:editable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="17sp" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:padding="5dp"
                    android:text="Eg- AB *"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/Edt_RtoZoneCode"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_color_form_background"
                    android:hint="Eg- ABC *"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:layout_weight="5"
                    android:maxLength="3"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="17sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:padding="5dp"
                    android:text="Eg - 1234 *"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/Edt_RtoVehicleNo"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_color_form_background"
                    android:hint="Vehicle Number *"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:layout_weight="5"
                    android:padding="5dp"
                    android:maxLength="4"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="17sp" />

            </LinearLayout>

        </LinearLayout>




        <EditText
            android:id="@+id/Edt_EngineNo"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn_color_form_background"
            android:hint="Engine Number *"
            android:imeOptions="actionNext"
            android:inputType="textCapCharacters"
            android:padding="5dp"
            android:layout_weight="5"
            android:maxLength="22"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="17sp" />


        <EditText
            android:id="@+id/Edt_ChassisNo"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn_color_form_background"
            android:hint="Chassis Number *"
            android:imeOptions="actionDone"
            android:inputType="textCapCharacters"
            android:padding="5dp"
            android:layout_weight="5"
            android:maxLength="22"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:padding="5dp"
                    android:text="Vehicle Color *"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:layout_weight="5"
                    android:background="@drawable/btn_color_form_background">

                    <Spinner
                        style="@style/Widget.AppCompat.DropDownItem.Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:id="@+id/Spn_VehicleColor"
                        android:padding="5dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="6">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:padding="5dp"
                    android:text="Registration Date *"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_registration_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:padding="5dp"
                    android:background="@drawable/cw_button_shadow_primary"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:editable="false"
                    android:textColor="@color/white"
                    android:textSize="14sp" />


            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:padding="5dp"
                android:text="Select Agreement"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:layout_weight="5"
                android:background="@drawable/btn_color_form_background">

                <Spinner
                    style="@style/Widget.AppCompat.DropDownItem.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:id="@+id/Spn_Agreement"
                    android:entries="@array/spin_item_agreement"

                    android:padding="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:padding="5dp"
                android:text="Select Bank * "
                android:textColor="@color/black"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:layout_marginBottom="20dp"
                android:layout_weight="5"
                android:background="@drawable/btn_color_form_background">

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    style="@style/Widget.AppCompat.DropDownItem.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:id="@+id/Spn_Bank"
                    android:padding="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>




        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutPreviousPolicyRenewalData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:padding="5dp"
                android:text="Previous Policy Details"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/Edt_PreviousPolicyNo"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_color_form_background"
                android:hint="Previous Policy No. *"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="5dp"
                android:layout_weight="5"

                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="17sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:padding="5dp"
                android:text="Select Insurance Company * "
                android:textColor="@color/black"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:layout_marginBottom="10dp"
                android:layout_weight="5"
                android:background="@drawable/btn_color_form_background">

                <Spinner
                    style="@style/Widget.AppCompat.DropDownItem.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:id="@+id/Spn_Ic"
                    android:padding="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>



        </LinearLayout>

    </LinearLayout>

</ScrollView>