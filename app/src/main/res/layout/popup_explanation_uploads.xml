<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@color/white"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            android:weightSum="10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_weight="9"
                android:id="@+id/title"
                />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:layout_gravity="center"
                android:visibility="visible"
                android:focusableInTouchMode="false"
                android:src="@drawable/cross_white" />
        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:fitsSystemWindows="true"
            android:fillViewport="true"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10sp"
                    android:visibility="gone"
                    android:id="@+id/LayoutPanCardDetails">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Make sure the photo isn't blury &amp; has no shadows or reflections. Use only an original PAN card for the photo"
                        android:layout_gravity="center"
                        android:gravity="center|start"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1. Place your PAN on a white sheet of paper"
                        android:layout_gravity="center"
                        android:gravity="center|start"
                        android:textSize="12sp"

                        android:layout_marginStart="20sp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="20sp"
                        android:padding="5dp"
                        android:layout_marginTop="20sp"
                        android:textColor="@color/black" />


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bg_image_1_pancard"
                        android:scaleType="fitXY"
                        android:layout_marginStart="20sp"
                        android:layout_marginEnd="20sp"
                        android:minHeight="130sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2. Fit the document inside the red frame &amp; take photo"
                        android:layout_gravity="center"
                        android:gravity="center|start"
                        android:textSize="12sp"

                        android:layout_marginStart="20sp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="20sp"
                        android:padding="5dp"
                        android:layout_marginTop="20sp"
                        android:textColor="@color/black" />


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bg_image_2_pancard"
                        android:scaleType="fitXY"
                        android:layout_marginStart="20sp"
                        android:layout_marginEnd="20sp"
                        android:minHeight="130sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3. Review image to check if it's clearly visible"
                        android:layout_gravity="center"
                        android:gravity="center|start"
                        android:textSize="12sp"

                        android:layout_marginStart="20sp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="20sp"
                        android:padding="5dp"
                        android:layout_marginTop="20sp"
                        android:textColor="@color/black" />


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bg_image_3_pancard"
                        android:scaleType="fitXY"
                        android:layout_marginStart="20sp"
                        android:layout_marginEnd="20sp"
                        android:layout_marginBottom="20sp"
                        android:minHeight="130sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10sp"
                    android:visibility="gone"
                    android:id="@+id/LayoutAadharCardDetails">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Make sure the photo isn't blury &amp; has no shadows or reflections. Use only an original document for the photo"
                        android:layout_gravity="center"
                        android:gravity="center|start"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1. Place your document on a flat, white background"
                        android:layout_gravity="center"
                        android:gravity="center|start"
                        android:textSize="12sp"

                        android:layout_marginStart="20sp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="20sp"
                        android:padding="5dp"
                        android:layout_marginTop="20sp"
                        android:textColor="@color/black" />


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/image_address_1"
                        android:scaleType="fitXY"
                        android:layout_marginStart="20sp"
                        android:layout_marginEnd="20sp"
                        android:minHeight="130sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2. Fit the document inside the red frame &amp; take photo"
                        android:layout_gravity="center"
                        android:gravity="center|start"
                        android:textSize="12sp"

                        android:layout_marginStart="20sp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="20sp"
                        android:padding="5dp"
                        android:layout_marginTop="20sp"
                        android:textColor="@color/black" />


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20sp"
                        android:layout_marginStart="20sp"
                        android:minHeight="130sp"
                        android:scaleType="fitXY"
                        android:src="@drawable/image_address_2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3. Flip the document &amp; take another photo"
                        android:layout_gravity="center"
                        android:gravity="center|start"
                        android:textSize="12sp"

                        android:layout_marginStart="20sp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="20sp"
                        android:padding="5dp"
                        android:layout_marginTop="20sp"
                        android:textColor="@color/black" />


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20sp"
                        android:layout_marginStart="20sp"
                        android:minHeight="130sp"
                        android:scaleType="fitXY"
                        android:src="@drawable/image_address_3" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4. Review image to check if it's clearly visible"
                        android:layout_gravity="center"
                        android:gravity="center|start"
                        android:textSize="12sp"

                        android:layout_marginStart="20sp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="20sp"
                        android:padding="5dp"
                        android:layout_marginTop="20sp"
                        android:textColor="@color/black" />


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/image_address_compare"
                        android:scaleType="fitXY"
                        android:layout_marginStart="20sp"
                        android:layout_marginEnd="20sp"
                        android:layout_marginBottom="20sp"
                        android:minHeight="130sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10sp"
                    android:visibility="gone"
                    android:id="@+id/LayoutSelfPhotoDetails">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Look at the camera &amp; keep your eyes open while clicking the photo. Make sure the photo isn't blury &amp; has no shadows or reflections."
                        android:layout_gravity="center"
                        android:gravity="center|start"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1. Stand in front of a plain wall and remove your Spectacles"
                        android:layout_gravity="center"
                        android:gravity="center|start"
                        android:textSize="12sp"

                        android:layout_marginStart="20sp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="20sp"
                        android:padding="5dp"
                        android:layout_marginTop="20sp"
                        android:textColor="@color/black" />


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/application_image1"
                        android:scaleType="fitXY"
                        android:layout_marginStart="20sp"
                        android:layout_marginEnd="20sp"
                        android:minHeight="130sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2. Try to fit your face inside the red frame &amp; take photo"
                        android:layout_gravity="center"
                        android:gravity="center|start"
                        android:textSize="12sp"

                        android:layout_marginStart="20sp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="20sp"
                        android:padding="5dp"
                        android:layout_marginTop="20sp"
                        android:textColor="@color/black" />


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20sp"
                        android:layout_marginStart="20sp"
                        android:minHeight="130sp"
                        android:scaleType="fitXY"
                        android:src="@drawable/application_image2" />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3. Review the photo to check if it's of good quality"
                        android:layout_gravity="center"
                        android:gravity="center|start"
                        android:textSize="12sp"

                        android:layout_marginStart="20sp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="20sp"
                        android:padding="5dp"
                        android:layout_marginTop="20sp"
                        android:textColor="@color/black" />


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/application_image3"
                        android:scaleType="fitXY"
                        android:layout_marginStart="20sp"
                        android:layout_marginEnd="20sp"
                        android:layout_marginBottom="20sp"
                        android:minHeight="130sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10sp"
                    android:visibility="gone"
                    android:id="@+id/LayoutVideoDetails">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Look at the camera while shooting the video. Make sure the video is shot in a well lit environment &amp; has no shadows or reflections."
                        android:layout_gravity="center"
                        android:gravity="center|start"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1. Stand in front of a plain wall and remove your Spectacles"
                        android:layout_gravity="center"
                        android:gravity="center|start"
                        android:textSize="12sp"

                        android:layout_marginStart="20sp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="20sp"
                        android:padding="5dp"
                        android:layout_marginTop="20sp"
                        android:textColor="@color/black" />


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/video_image_1"
                        android:scaleType="fitXY"
                        android:layout_marginStart="20sp"
                        android:layout_marginEnd="20sp"
                        android:minHeight="130sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2. Fit your face and hold up your PAN card inside the red frame. Only then 'Take Video'"
                        android:layout_gravity="center"
                        android:gravity="center|start"
                        android:textSize="12sp"

                        android:layout_marginStart="20sp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="20sp"
                        android:padding="5dp"
                        android:layout_marginTop="20sp"
                        android:textColor="@color/black" />


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20sp"
                        android:layout_marginStart="20sp"
                        android:layout_marginBottom="20sp"

                        android:minHeight="130sp"
                        android:scaleType="fitXY"
                        android:src="@drawable/video_image_2" />




                </LinearLayout>



                <Button
                    android:id="@+id/Btn_Take_Pic_Video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/portfolio_bg_color"
                    android:minHeight="50sp"
                    android:layout_margin="20sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/white"/>


            </LinearLayout>


        </ScrollView>

    </LinearLayout>

</RelativeLayout>