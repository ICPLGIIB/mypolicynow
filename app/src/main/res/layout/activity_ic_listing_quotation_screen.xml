<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/form_background_color"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/cw_button_shadow"
                android:minHeight="200sp">

                <TextView
                    android:id="@+id/tv_vehicle_make_model_variant_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tv_vehicle_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tv_vehicle_make_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/tv_vehicle_model_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tv_vehicle_variant_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:src="@drawable/cc_icon"/>
                    <TextView
                        android:id="@+id/tv_cc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/calibri_regular"
                        android:layout_marginStart="5dp"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/fuel_quote"/>
                    <TextView
                        android:id="@+id/tv_fuel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/calibri_regular"

                        android:layout_marginStart="5dp"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_marginStart="20dp"

                        android:src="@drawable/ic_location"/>
                    <TextView
                        android:id="@+id/tv_rto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/calibri_regular"

                        android:layout_marginStart="5dp"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_rto_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginStart="5dp"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/cw_shadow_bg"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5sp"
                    android:layout_marginBottom="5dp"
                    >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/iv_vehicle_type"
                            android:layout_width="120sp"
                            android:layout_height="120sp"
                            android:layout_gravity="center"
                            android:scaleType="fitCenter"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/orange"
                            android:layout_margin="5dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_margin="5dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_marginTop="5dp"
                                    >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Policy Package Type"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:textSize="10sp"
                                        android:layout_marginBottom="5dp"
                                        android:fontFamily="@font/calibri_regular"
                                        android:textColor="@color/black"/>

                                    <TextView
                                        android:id="@+id/tv_policy_package_type"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:textSize="12sp"
                                        android:minWidth="120dp"
                                        android:fontFamily="@font/calibri_regular"
                                        android:inputType="textCapSentences"
                                        android:textColor="@color/white"
                                        android:background="@color/primary_green"
                                        android:padding="3dp"
                                        />



                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:weightSum="10">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"

                                        android:layout_weight="5">



                                        <TextView
                                            android:id="@+id/tv_policy_start_date"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="12sp"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:minWidth="100sp"
                                            android:textColor="@color/black"
                                            android:fontFamily="@font/calibri_regular"
                                            android:background="@color/quantum_yellow"
                                            android:padding="3dp"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Policy Start Date"
                                            android:textSize="10sp"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:fontFamily="@font/calibri_regular"

                                            android:textColor="@color/gray"/>


                                    </LinearLayout>
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/orange"
                                        android:layout_margin="3dp"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_weight="5">



                                <TextView
                                    android:id="@+id/tv_policy_end_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:minWidth="100sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/calibri_regular"

                                    android:background="@color/quantum_yellow"
                                    android:padding="3dp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textSize="10sp"
                                    android:fontFamily="@font/calibri_regular"

                                    android:text="Policy End Date"
                                    android:textColor="@color/gray"/>

                            </LinearLayout>
                            </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/orange"
                            android:layout_margin="3dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="10"
                                    >

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:layout_weight="5">


                                        <TextView
                                            android:id="@+id/tv_plan_type"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/calibri_regular"
                                            android:gravity="center"
                                            android:minWidth="80sp"
                                            android:padding="3dp"

                                            android:textColor="@color/orange"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:textSize="10sp"
                                            android:text="Plan Type"
                                            android:fontFamily="@font/calibri_regular"
                                            android:textColor="@color/black"/>

                                    </LinearLayout>
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/orange"/>
                                    <LinearLayout
                                        android:id="@+id/LinearPA_Cover"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:layout_weight="5"
                                        android:visibility="gone"
                                        android:layout_marginStart="5dp">



                                        <TextView
                                            android:id="@+id/tv_pa_cover_tenure"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:minWidth="80sp"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:textSize="12sp"
                                            android:fontFamily="@font/calibri_regular"

                                            android:textColor="@color/orange"
                                            android:padding="3dp"
                                            />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:textSize="10sp"
                                            android:fontFamily="@font/calibri_regular"


                                            android:text="PA Cover"
                                            android:textColor="@color/black"/>


                                    </LinearLayout>
                                </LinearLayout>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/orange"
                                    android:layout_margin="5dp"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="6"
                                        >

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:layout_weight="3">



                                            <TextView
                                                android:id="@+id/tv_policy_type"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:textSize="12sp"
                                                android:textColor="@color/orange"
                                                android:padding="3dp"
                                                android:fontFamily="@font/calibri_regular"

                                                />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:textSize="10sp"
                                                android:text="Policy Type"
                                                android:fontFamily="@font/calibri_regular"

                                                android:textColor="@color/black"/>

                                        </LinearLayout>
                                        <View
                                            android:layout_width="1dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/orange"/>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:layout_weight="3"
                                            android:layout_marginStart="5dp">



                                            <TextView
                                                android:id="@+id/tv_policy_holder_type"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:textSize="12sp"
                                                android:fontFamily="@font/calibri_regular"

                                                android:textColor="@color/orange"
                                                android:padding="3dp"
                                                />
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:textSize="10sp"
                                                android:fontFamily="@font/calibri_regular"

                                                android:text="Policy Holder Type"
                                                android:textColor="@color/black"/>


                                        </LinearLayout>


                                    </LinearLayout>
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/orange"
                                        android:layout_margin="5dp"/>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:weightSum="10"
                                            >

                                                <LinearLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:orientation="vertical"
                                                        android:layout_gravity="center"
                                                        android:gravity="center"
                                                        android:layout_weight="5">



                                                        <TextView
                                                            android:id="@+id/tv_previous_ncb"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:minWidth="80sp"
                                                            android:layout_gravity="center"
                                                            android:gravity="center"
                                                            android:textSize="12sp"
                                                            android:fontFamily="@font/calibri_regular"

                                                            android:textColor="@color/orange"
                                                            android:padding="3dp"
                                                            />

                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="center"
                                                        android:gravity="center"
                                                        android:textSize="10sp"
                                                        android:text="Previous NCB"
                                                        android:fontFamily="@font/calibri_regular"

                                                        android:textColor="@color/black"/>

                                                    </LinearLayout>
                                                <View
                                                    android:layout_width="1dp"
                                                    android:layout_height="match_parent"
                                                    android:background="@color/orange"/>
                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical"
                                                    android:layout_gravity="center"
                                                    android:gravity="center"
                                                    android:layout_weight="5"
                                                    android:layout_marginStart="5dp">


                                                    <TextView
                                                        android:id="@+id/tv_current_ncb"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:minWidth="80sp"
                                                        android:layout_gravity="center"
                                                        android:gravity="center"
                                                        android:fontFamily="@font/calibri_regular"

                                                        android:textSize="12sp"
                                                        android:textColor="@color/orange"
                                                        android:padding="3dp"
                                                        />
                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="center"
                                                        android:gravity="center"
                                                        android:textSize="10sp"
                                                        android:fontFamily="@font/calibri_regular"

                                                        android:text="Current NCB"
                                                        android:textColor="@color/black"/>


                                        </LinearLayout>
                                        </LinearLayout>
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/orange"
                                        android:layout_margin="5dp"/>

                                    <LinearLayout
                                        android:id="@+id/LinearPreviousPolicyData"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:visibility="gone">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:weightSum="10"
                                            >

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:layout_weight="5">



                                                <TextView
                                                    android:id="@+id/tv_previous_policy_type"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:minWidth="80sp"
                                                    android:layout_gravity="center"
                                                    android:gravity="center"
                                                    android:textSize="12sp"
                                                    android:fontFamily="@font/calibri_regular"
                                                    android:textColor="@color/orange"
                                                    android:padding="3dp"
                                                    />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center"
                                                    android:gravity="center"
                                                    android:textSize="10sp"
                                                    android:fontFamily="@font/calibri_regular"
                                                    android:text="Previous Year Policy Type"
                                                    android:textColor="@color/black"/>

                                            </LinearLayout>
                                            <View
                                                android:layout_width="1dp"
                                                android:layout_height="match_parent"
                                                android:background="@color/orange"/>
                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:layout_weight="5"
                                                android:layout_marginStart="5dp">



                                                <TextView
                                                    android:id="@+id/tv_previous_policy_expiry_date"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:minWidth="80sp"
                                                    android:layout_gravity="center"
                                                    android:gravity="center"
                                                    android:textSize="12sp"
                                                    android:fontFamily="@font/calibri_regular"
                                                    android:textColor="@color/orange"
                                                    android:padding="3dp"
                                                    />
                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center"
                                                    android:gravity="center"
                                                    android:textSize="10sp"
                                                    android:fontFamily="@font/calibri_regular"
                                                    android:text="Previous Policy Expiry Date"
                                                    android:textColor="@color/black"/>


                                            </LinearLayout>
                                        </LinearLayout>
                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:background="@color/orange"
                                            android:layout_margin="5dp"/>
                                    </LinearLayout>


                                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center">



                                <LinearLayout
                                    android:id="@+id/LinearIsClaimed"                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:visibility="invisible"
                                    android:orientation="vertical"
                                    android:layout_weight="5">


                                    <TextView
                                        android:id="@+id/tv_claimed_in_past_year"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:textSize="12sp"
                                        android:fontFamily="@font/calibri_regular"

                                        android:textColor="@color/orange"
                                        android:padding="3dp"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:textSize="10sp"
                                        android:fontFamily="@font/calibri_regular"

                                        android:text="Claimed in Past Year"
                                        android:textColor="@color/black"/>


                                </LinearLayout>


                            <LinearLayout
                                android:id="@+id/LinearEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="5dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/cw_button_shadow_primary"
                                android:layout_weight="5">
                                <ImageView
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:tint="@color/white"
                                    android:src="@drawable/ic_action_edit"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textColor="@color/white"
                                    android:layout_marginStart="10sp"
                                    android:layout_gravity="center"
                                    android:text="EDIT"/>
                            </LinearLayout>
                        </LinearLayout>

                </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_parent_portfolio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:padding="5dp"></LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>

