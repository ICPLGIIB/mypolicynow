<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:background="@color/white"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include android:id="@+id/tool_bar"
        layout="@layout/toolbar_dashboard_new"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/sign_in_btn"
        android:layout_below="@+id/tool_bar">
        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
            <include
                android:id="@+id/background"

                layout="@layout/layout_background"/>
            <RelativeLayout
                android:id="@+id/text_sent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/background"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true">
                <TextView
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset Link Sent!"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/san_francisco_display_semibold"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="We have sent you a password reset link to "
                    android:layout_below="@+id/heading"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/san_francisco_display_light"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="your registered mail ID. "
                    android:layout_below="@+id/text1"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/san_francisco_display_light"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/sign_in_btn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="50sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
            <Button
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:id="@+id/btn_sign_in"
                android:background="@drawable/sign_in_bg_new"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="20sp"
                android:text="Go to Sign in"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/san_francisco_display_semibold"
                android:elevation="2dp"
                android:letterSpacing="0.2"/>
    </RelativeLayout>
</RelativeLayout>
