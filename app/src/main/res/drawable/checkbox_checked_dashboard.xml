<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp"/>
                    <stroke android:width="1dp" android:color="#ffffff"/>
                    <gradient android:startColor="@color/colorAccent" android:endColor="@color/colorAccent" android:angle="270" android:centerColor="@color/colorAccent"/>
                    <size android:height="18dp" android:width="18dp"/>
                </shape>
            </item>
            <item android:height="2dp" android:width="4dp" android:left="4dp" android:top="9dp">
                <rotate android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="#fff"/>
                    </shape>
                </rotate>
            </item>
            <item android:height="2dp" android:width="9dp" android:left="6dp" android:top="8dp">
                <rotate android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="#fff"/>
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>
</selector>
