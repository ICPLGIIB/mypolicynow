<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#A6A6A6"/>
                    <padding android:top="2dp"/>
                    <padding android:left="2dp"/>
                    <padding android:right="2dp"/>
                    <!-- alttan gölge -->
                    <corners android:radius="5dp"/>
                </shape>
            </item>
            <!-- BUTTON alttan gölge
              android:right="5px" to make it round-->
            <item
                android:bottom="5px"
                >
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="@color/primary_green"
                        android:endColor="@color/primary_green"
                        android:angle="270" />
                    <corners
                        android:radius="5dp"/>
                    <padding
                        android:left="5dp"
                        android:top="5dp"
                        android:right="5dp"
                        android:bottom="5dp"/>
                </shape>
            </item>
        </layer-list>
    </item>


</selector>
