<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/form_background_color">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolback_with_back"/>

    <ScrollView
        android:id="@+id/Scroll_BelowLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5sp"
            android:padding="10sp"
            >




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="About GIIB"
                android:minHeight="40sp"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_giib"
                    android:lineSpacingMultiplier="1.5"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10sp"
                    android:minHeight="40sp"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:layout_gravity="center|start"
                    android:gravity="center|start"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300sp"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="20sp"
                    android:src="@drawable/abt_img_2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120sp"
                android:padding="10sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/iso_icon"
                android:orientation="horizontal"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:layout_marginTop="10sp"
                android:background="@color/white"
                android:orientation="horizontal">





                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100sp"
                    android:layout_gravity="center"

                    android:src="@drawable/irda_logo_new"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/irda_info"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:lineSpacingMultiplier="1.3"/>


            </LinearLayout>



        </LinearLayout>


    </ScrollView>


</RelativeLayout>